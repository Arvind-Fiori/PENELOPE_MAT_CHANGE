<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:t="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    controllerName="arvind.pp.penelope.matchange.Controller.Detail"
>
    <Page
        title="Material Detail "
        xmlns:core="sap.ui.core"
        showNavButton="true"
        navButtonPress="onBack"
        
    >
     <customHeader>
            <Bar>
                <contentLeft>
                <!-- <Button icon="sap-icon://nav-back" id="btnback"></Button> -->
                </contentLeft>
                <contentMiddle>
                    <HBox
                        class="header"
                        width="100%"
                    >
                    <!-- <Button icon="sap-icon://nav-back" id="btnback"  press ="onBack"></Button> -->
                    <!-- <Button text="" id="btnback"  press ="onBack"></Button> -->
                        <Label id="LblMatDetls" class="clsMatDetls"
                           
                            width="100%"
                            
                            
                        />
                    </HBox>
                </contentMiddle>
            </Bar>
        </customHeader>

    <ScrollContainer  width="100%" horizontal="true" vertical="true" focusable="true">
        <Table
            id="Detail_WP2"
            fixedLayout = "false"
            
          items="{Detail>/}"
             
           
            alternateRowColors="true"
        >
           

            <columns>
               
                <Column >
                    <header>
                        <Label text="Fabric Name" id="DFN1"/>
                    </header>
                </Column>
                 <Column >
                    <header>
                    <Label text="Wovens Pattern Ident" id="DWPI1"/>
                        <!-- <Label text="WOVENS PATTERN IDENT" /> -->
                    </header>
                </Column>
                <Column >
                    <header>
                        <!-- <Label text="YARN IDENTIFIER" /> -->
                        
                        <Label text="Yarn Identifier" id="DYI1"/>
                    </header>
                </Column>
                <Column >
                    <header>
                        <!-- <Label text="YARN REFERENCE" /> -->
                        
                        <Label text="Yarn Reference" id="DYR1"/>
                    </header>
                </Column>
                <Column >
                    <header>
                    
                        <Label text="Yarn Material" id="DYM1"/>
                        <!-- <Label text="YARN MATERIAL CODE" /> -->
                    </header>
                </Column>
                <Column >
                    <header>
                        <Label text="Resultant Count" id="DRC1"/>
                    </header>
                </Column>
                <Column >
                    <header>
                        <Label text="SHADE 1" id="DS11"/>
                    </header>
                </Column>
                <Column >
                    <header>
                        <Label text="SHADE 2" id="DS21"/>
                    </header>
                </Column>
                <Column >
                    <header>
                        <Label text="SHADE 3" id="DS31"/>
                    </header>
                </Column>
                <Column >
                    <header>
                        <Label text="Total Ends" id="DTE1"/>
                    </header>
                </Column>
                <Column >
                    <header>
                    <Label text="Ends Per Repeat" id="DEPR1"/>
                        <!-- <Label text="ENDS PER REPEAT" /> -->
                    </header>
                </Column>
                <Column >
                    <header>
                        <Label text="Yarn percentage" id="DYP1"/>
                    </header>
                </Column>
                <Column >
                    <header>
                        <Label text="Selvedge Included" id="DSI1"/>
                    </header>
                </Column>
                <Column >
                    <header>
                        <Label text="Exact Commercial Count" id="DECC1"/>
                    </header>
                </Column>
                <Column >
                    <header>
                        <Label text="Yarn Material Composition" id="DYMC1"/>
                    </header>
                </Column>
                <Column >
                    <header>
                        <Label text="Yarn Description" id="DYD1"/>
                    </header>
                </Column>
                <Column >
                    <header>
                        <Label text="Spinning Process" id="DSP1"/>
                    </header>
                </Column>

              
            </columns>
            <items>
                <ColumnListItem
                 
                >
                    <cells>
 
                    <Label  text="{Detail>WFn}"/>
                    <Label  text="{Detail>WPi}"/>
                     <Label  text="{Detail>WI2}"/>
                 <Label  text="{Detail>WI}"/>
                  <Label  text="{Detail>WM}"/>
                   <Label  text="{Detail>WC}"/>
                    <Label  text="{Detail>WTS1}"/>
                     <Label  text="{Detail>WTS2}"/>

                     <Label  text="{Detail>WTS3}"/>
                     <Label  text="{Detail>WTEd}"/>
                     <Label  text="{Detail>WWepr}"/>
                     <Label  text="{Detail>WYpr}"/>
                     <Label  text="{Detail>WSlv}"/>
                     <Label  text="{Detail>WCcnt}"/>
                     <Label  text="{Detail>WComp}"/>
                     <Label  text="{Detail>WYdesc}"/>
                     <Label  text="{Detail>WSppc}"/>
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
        </ScrollContainer>
         <ScrollContainer  width="100%" horizontal="true" vertical="true" focusable="true">
         <Table
         
            id="Detail_WP3"
           
            fixedLayout = "false"
          
          items="{Detail>/}"
             
           
            alternateRowColors="true"
        >
          

            <columns>
               
                <Column >
                    <header>
                        <Label text="Fabric Name" id="DFN2"/>
                    </header>
                </Column>

                <Column >
                    <header>
                    
                        <Label text="Wovens Pattern Identifier" id="DWPI2"/>
                        <!-- <Label text="WOVENS PATTERN IDENTIFIER" /> -->
                    </header>
                </Column>
                <Column >
                    <header>
                        <Label text="Serial Number"  id="DSN2"/>
                    </header>
                </Column>
                <Column >
                    <header>
                    
                        <Label text="Yarn Identifier" id="DYI2"/>
                        <!-- <Label text="YARN IDENTIFIER" /> -->
                    </header>
                </Column>
                <Column >
                    <header>
                    
                        <Label text="Yarn Reference" id="DYR2"/>
                        <!-- <Label text="YARN REFERENCE" /> -->
                    </header>
                </Column>
                <Column >
                    <header>
                        <Label text="Yarn Ends" id="DYE2"/>
                    </header>
                </Column>
                <Column >
                    <header>
                        <Label text="GROUP 1" id="DG12"/>
                    </header>
                </Column>
                <Column >
                    <header>
                        <Label text="GROUP 2" id="DG22"/>
                    </header>
                </Column>
                <Column >
                    <header>
                        <Label text="GROUP 3" id="DG32"/>
                    </header>
                </Column>
                <Column >
                    <header>
                        <Label text="GROUP 4" id="DG42"/>
                    </header>
                </Column>
              
            </columns>
            <items>
                <ColumnListItem
                  
                >
                    <cells>
 
                     <Label  text="{Detail>ZW_FN}"/>
                     <Label  text="{Detail>ZW_PI}"/>
                     <Label  text="{Detail>ZSR_NO}"/>
                     <Label  text="{Detail>ZW_I2}"/>
                     <Label  text="{Detail>ZW_I}"/>
                     <Label  text="{Detail>ZW_T_ED}"/>
                     <Label  text="{Detail>ZW_G1}"/>
                     <Label  text="{Detail>ZW_G2}"/>
                     <Label  text="{Detail>ZW_G3}"/>
                     <Label  text="{Detail>ZW_G4}"/>
                 
                     
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
</ScrollContainer>
<ScrollContainer  width="100%" horizontal="true" vertical="true" focusable="true">
          <Table
            id="Detail_Other"
           width="50%"
          fixedLayout="false"
          items="{Detail>/}"
           sticky="ColumnHeaders" 
           
            alternateRowColors="true"
        >
        

            <columns>
               
                <Column>
                    <header >
                        <Label text="FieldName"  design="Bold" id="DFN"/>
                    </header>
                </Column>

                <Column >
                    <header>
                        <Label text="Value" design="Bold" id="DV"/>
                    </header>
                </Column>
               
            </columns>
            <items>
                <ColumnListItem
                  
                >
                    <cells>
 
                     <Label text="{Detail>FieldName}" design="Bold"  />
                     <Label  text="{Detail>FieldValue}"/>
                   
                     
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
        </ScrollContainer>
        <footer>
            <Toolbar>
                <ToolbarSpacer />
                 <Button
                    id="btnDmsImage"
                    text="Product Image"
                    press="onDmsImage"
                    type="Accept"
                    icon="sap-icon://image-viewer"
                />
                 <Button
                    id="btnFooterBack"
                    text="Back"
                    press="onBack"
                    type="Accept"
                    icon="sap-icon://nav-back"
                />
               
                
            </Toolbar>
        </footer>
    </Page>
</mvc:View>
